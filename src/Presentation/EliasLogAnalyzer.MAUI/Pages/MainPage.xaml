<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:EliasLogAnalyzer.MAUI.ViewModels"
             x:DataType="viewModels:MainViewModel"
             x:Class="EliasLogAnalyzer.MAUI.MainPage">

    <ContentPage.MenuBarItems>
        <MenuBarItem Text="File">
            <MenuFlyoutItem Text="Open Logfiles"
                            Command="{Binding LoadLogfilesCommand}" />
        </MenuBarItem>
    </ContentPage.MenuBarItems>

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="20">
        
        <ImageButton Source="logo.png"
                     Command="{Binding LoadLogfilesCommand}"
                     WidthRequest="500"
                     HeightRequest="500"
                     Aspect="AspectFit"
                     BackgroundColor="Transparent"
                     Opacity="0.3"
                     HorizontalOptions="Center"
                     VerticalOptions="Center" />

        <Label Text="{Binding LoadingMessage}"
               HorizontalOptions="Center"
               VerticalOptions="Center" />
        
        <ActivityIndicator IsRunning="{Binding IsLoading}" Color="DarkCyan" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" />
    </StackLayout>

</ContentPage>